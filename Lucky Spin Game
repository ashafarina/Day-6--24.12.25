import java.util.Random;

public class LuckySpin {
    public static void main(String[] args) {

        Random r = new Random();
        int chances = 3;

        while (chances-- > 0) {
            int number = r.nextInt(10);
            System.out.println("Spin Result: " + number);
            if (number == 7) {
                System.out.println("You Won!");
                break;
            }
        }
    }
}
